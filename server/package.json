{
  "name": "mudOS-server",
  "version": "0.0.1",
  "author": "A. Mat√≠as Quezada (amatiasq@gmail.com)",
  "license": "BSD-2-Clause",
  "private": true,
  "scripts": {
    "coverage": "npm run test-with-coverage",
    "pre-commit": "npm test",
    "prod": "ts-node src/index.ts",
    "start": "nodemon",
    "test-with-coverage": "jest --coverage --collectCoverageFrom='src/**/*.ts'",
    "test:ws": "wscat -c ws://localhost:9000",
    "test": "jest"
  },
  "devDependencies": {
    "@types/node": "^14.10.0",
    "@types/ws": "^7.2.6",
    "nodemon": "^2.0.4",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5",
    "wscat": "^4.0.1"
  },
  "dependencies": {
    "ws": "^7.3.1"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "ts-node src/index.ts",
    "ext": "ts"
  }
}
